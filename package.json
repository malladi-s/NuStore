    "morgan": "1.9.1",
    "react": "16.12.0",
    "react-dom": "16.12.0",
    "react-router-dom": "5.1.2"
  },
  "devDependencies": {
    "@babel/core": "7.7.2",
    "@babel/polyfill": "7.7.0",
    "@babel/preset-env": "7.7.1",
    "@babel/preset-react": "7.7.0",
    "babel-loader": "8.0.6",
    "compression-webpack-plugin": "3.0.0",
    "cookie-parser": "1.4.4",
    "css-loader": "3.2.0",
    "node-sass": "4.13.0",
    "sass-loader": "8.0.0",
    "style-loader": "1.0.0",
